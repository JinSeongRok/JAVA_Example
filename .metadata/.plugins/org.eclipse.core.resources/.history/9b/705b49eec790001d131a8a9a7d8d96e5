
public class Student {
	String name ;
	int assigmentsScore ;
	int examScore;
	char Grade;
	
	
	Student(){	
	
	}
	
	public String toString() {
		double totalScore = assigmentsScore *0.4  + examScore * 0.6;
		if(totalScore >= 90) {
			Grade = 'A';
		} else if(totalScore >= 80){
			Grade = 'B';
		} else if(totalScore >= 70){
			Grade = 'C';
		} else if(totalScore >= 60) {
			Grade = 'D';
		} else {
			Grade = 'F'
		}
		String i = "이름 : "+ name + "\n과제 점수 :" + assigmentsScore + "\n시험 점수 : "+ examScore + "\n학점  : "+ Grade;
		return i;
	}
	
	
	
	
}
